@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="clearfix"></div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat blue">
            <div class="visual">
                <i class="fa fa-comments"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="@ViewBag.dataCount">0</span>
                </div>
                <div class="desc"> Total To Do List </div>
            </div>
            <a class="more" href="javascript:;"> View more
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat red">
            <div class="visual">
                <i class="fa fa-bar-chart-o"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="@ViewBag.assDraft">0</span></div>
                <div class="desc"> New Assurances (Draft)</div>
            </div>
            <a class="more" href="javascript:;"> View more
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat green">
            <div class="visual">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="@ViewBag.assCons">0</span>
                </div>
                <div class="desc"> New Consultings (Draft) </div>
            </div>
            <a class="more" href="javascript:;"> View more
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat purple">
            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="@ViewBag.actCount"></span></div>
                <div class="desc"> Total Activities </div>
            </div>
            <a class="more" href="javascript:;"> View more
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-green"></i>
                    <span class="caption-subject font-green bold uppercase">Total Transaksi Assurance</span>
                    <span class="caption-helper">Per Proses...</span>
                </div>
            </div>
            <div class="portlet-body">
                <div id="dashboard_amchart_3" class="CSSAnimationChart"></div>
                @*<img src="@Url.Action("showChart1")" alt="AssuranceChart" />*@
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-red-sunglo"></i>
                    <span class="caption-subject font-red-sunglo bold uppercase">Total Transaksi Consulting</span>
                    <span class="caption-helper">Per Proses...</span>
                </div>
            </div>
            <div class="portlet-body">
                <div id="dashboard_amchart_4" class="CSSAnimationChart"></div>
                @*<img src="@Url.Action("showChart2")" alt="ConsultingChart" />*@
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-sm-6">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-layers font-blue"></i>
                    <span class="caption-subject font-blue bold uppercase">Your To Do List</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="scroller" style="height: 500px;" data-always-visible="1" data-rail-visible="0">
                    <ul class="feeds">
                        <li>
                            <div class="col1">
                                <div class="cont">
                                    <div class="cont-col1">
                                        <div class="label label-sm label-info">
                                            <i class="fa fa-check"></i>
                                        </div>
                                    </div>
                                    <div class="cont-col2">
                                        <div class="desc"> You have @ViewBag.dataCount pending tasks.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        @if (ViewBag.AP.Count > 0) {
                            @Html.Partial("_AP", new ViewDataDictionary(ViewBag.AP))
                        }
                        @if (ViewBag.AU.Count > 0) {
                            @Html.Partial("_AU", new ViewDataDictionary(ViewBag.AU))
                        }
                        @if (ViewBag.Questioner.Count > 0) {
                            @Html.Partial("_Questioner", new ViewDataDictionary(ViewBag.Questioner))
                        }
                        @if (ViewBag.Prelim.Count > 0) {
                            @Html.Partial("_Preliminary", new ViewDataDictionary(ViewBag.Prelim))
                        }
                        @if (ViewBag.BPM.Count > 0) {
                            @Html.Partial("_BPM", new ViewDataDictionary(ViewBag.BPM))
                        }
                        @if (ViewBag.RCM.Count > 0) {
                            @Html.Partial("_RCM", new ViewDataDictionary(ViewBag.RCM))
                        }
                        @if (ViewBag.APM.Count > 0) {
                            @Html.Partial("_APM", new ViewDataDictionary(ViewBag.APM))
                        }
                        @if (ViewBag.SP.Count > 0) {
                            @Html.Partial("_SP", new ViewDataDictionary(ViewBag.SP))
                        }
                        @if (ViewBag.Fieldwork.Count > 0) {
                            @Html.Partial("_Fieldwork", new ViewDataDictionary(ViewBag.Fieldwork))
                        }
                        @if (ViewBag.EM.Count > 0) {
                            @Html.Partial("_EM", new ViewDataDictionary(ViewBag.EM))
                        }
                        @if (ViewBag.CR.Count > 0) {
                            @Html.Partial("_CR", new ViewDataDictionary(ViewBag.CR))
                        }
                        @if (ViewBag.CDA.Count > 0) {
                            @Html.Partial("_CDA", new ViewDataDictionary(ViewBag.CDA))
                        }
                        @if (ViewBag.CSP.Count > 0) {
                            @Html.Partial("_CSP", new ViewDataDictionary(ViewBag.CSP))
                        }
                        @if (ViewBag.CFW.Count > 0) {
                            @Html.Partial("_CFW", new ViewDataDictionary(ViewBag.CFW))
                        }
                        @*@if (ViewBag.ConsulFWIssue.Count > 0)
                        {
                            @Html.Partial("_ConsulIssue", new ViewDataDictionary(ViewBag.ConsulFWIssue))
                        }*@
                </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-6">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-purple"></i>
                    <span class="caption-subject font-purple bold uppercase">Total Audit</span>
                    <span class="caption-helper">Per Tahun...</span>
                </div>
            </div>
            <div class="portlet-body">
                <div id="dashboard_amchart_31" class="CSSAnimationChart"></div>
                @*<img src="@Url.Action("showChart3")" alt="AssuranceChart" />*@
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bar-chart font-purple"></i>
                <span class="caption-subject font-purple bold uppercase">Schedule for a month</span>
                @*<span class="caption-helper">Per Tahun...</span>*@
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            Audit Name
                        </th>
                        <th>
                            Auditor
                        </th>
                        <th>
                            Auditee
                        </th>
                        <th>
                            Periode
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ePatria.Models.LetterOfCommand item in ViewBag.ListSp)
                    {
                        <tr>
                            <td>
                                @item.Activity.Name
                            </td>
                            <td>
                                <ul>
                                    <li>Responsible Person : @item.PICID</li>
                                    <li>Supervisor : @item.SupervisorID</li>
                                    <li>Team Leader : @item.TeamLeaderID</li>
                                    <li>
                                        Member : @foreach (string str in item.MemberID.Split(';'))
                                        {
                                            <ul>
                                                @if (str != "")
                                                {
                                                    <li>@str</li>
                                                }
                                            </ul>
                                        }
                                    </li>
                                </ul>
                            </td>
                            <td>
                                @item.PreliminaryID
                                @foreach (string str in item.AuditPlanningMemorandum.Preliminary.EmployeeID.Split(';'))
                                {
                                    <ul>
                                        @if (str != "")
                                        {
                                            <li>@str</li>
                                        }
                                    </ul>
                                }
                            </td>
                            <td>
                                @item.Date_Start.ToShortDateString() - @item.Date_End.ToShortDateString()
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


