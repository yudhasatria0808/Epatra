@model ePatria.Models.Employee
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("EditProfile", "MyProfile", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Edit My Profile</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.Hidden("EmployeeID", (int)ViewBag.EmployeeID)

        <div class="form-group">
            @Html.Label("UserName", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBox("UserName", (string)ViewBag.UserName, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("UserName", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("FirstName", new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBox("FirstName", (string)ViewBag.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("LastName", new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBox("LastName", (string)ViewBag.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBox("Email", (string)ViewBag.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" class="btn btn-default" value="Edit Profile" />
            </div>
        </div>
    </div>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }


