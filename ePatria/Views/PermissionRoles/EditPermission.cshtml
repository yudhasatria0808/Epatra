@model ePatria.Models.Permissions

@{  
    Layout = null;
}
<div class="form-horizontal">

    @Html.HiddenFor(model => model.permissionID, new {id = "permId"})
    @Html.HiddenFor(model => model.Status)

    <div class="form-group">
        @Html.Label("Permission Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.PermissionName, new { htmlAttributes = new { @class = "form-control"} })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.Desc, new { htmlAttributes = new { @class = "form-control"} })
        </div>
    </div>
        
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
