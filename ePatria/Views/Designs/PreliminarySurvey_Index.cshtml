@{
    ViewBag.Title = "PreliminarySurvei_Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .padding5 {
        padding: 5px;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box red-sunglo">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i> Preliminary Survey
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <a href="#modal-create" data-toggle="modal" class="btn btn-pertamina-green">
                                    Add New <i class="fa fa-plus"></i>
                                </a>
                                <button class="btn dropdown-toggle" data-toggle="dropdown">
                                    Tools <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            Save as PDF
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Export to Excel
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="table-preliminary-survey">
                    <thead>
                        <tr>
                            <th>
                                Actvity Name
                            </th>
                            <th>
                                Engagement Name
                            </th>
                            <th>
                                Period
                            </th>
                            <th>
                                Auditee
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <a href="@Url.Action("PreliminarySurvey_Details", "Designs")">Activity A</a>
                            </td>
                            <td>
                                Engagement A
                            </td>
                            <td>
                                September 8, 2015 - October 7, 2015
                            </td>
                            <td>
                                VP ABC
                            </td>
                            <td>
                                Pending
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
<!-- MODAL CREATE START -->
<div class="modal fade" id="modal-create" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title"><i class="fa fa-plus-circle"></i> <b>Add Preliminary Survey</b></h4>
            </div>
            <div class="modal-body">
                <form id="new-preliminary-survey" method="post" enctype="multipart/form-data">
                    <table id="table-new-preliminary-survey">
                        <tr>
                            <td class="padding5" width="160">
                                Type
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                <input type="radio" name="Type" value="Planed" /> Planed
                                <input type="radio" name="Type" value="Unplaned" /> Unplaned
                            </td>
                        </tr>
                        <tr>
                            <td class="padding5" width="160">
                                No. Preliminary Survey
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                <i>Generated by system</i>
                            </td>
                        </tr>
                        <tr>
                            <td class="padding5" width="160">
                                Activity
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                <select name="Activity">
                                    <option value="">Select...</option>
                                    <option value="Activity A">Activity A</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td class="padding5" width="160">
                                Engagement Name
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                <select name="Engagement Name">
                                    <option value="">Select...</option>
                                    <option value="Engagement A">Engagement A</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td class="padding5" width="160">
                                Realization Time
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                <div class="input-group input-large" id="defaultrange_modal">
                                    <input type="text" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn default date-range-toggle" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="padding5" width="160">
                                Auditee
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                <select name="Auditee">
                                    <option value="">Select...</option>
                                    <option value="Yayan Ruhian">Yayan Ruhian</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td class="padding5" width="160">
                                Attachment
                            </td>
                            <td class="padding5">
                                :
                            </td>
                            <td class="padding5">
                                    <input type="file" name="files[]" multiple="">
                            </td>
                        </tr>
                    </table>
                </form>

                

                <div class="modal-footer" style="margin-top:10px; margin-bottom:-10px;">
                    <button type="button" class="btn btn-pertamina-green" data-dismiss="modal"><i class="fa fa-arrow-up"></i> Submit</button>
                    <button type="submit" class="btn btn-pertamina-blue" data-dismiss="modal"><i class="fa fa-eye"></i> Submit for Review</button>
                    <button type="submit" class="btn btn-default" data-dismiss="modal"><i class="fa fa-sign-out"></i> Check Out</button>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- MODAL CREATE END -->