@model ePatria.Models.Preliminary

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Preliminary</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Activity.Name)
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Activity.Name)
        </dd>

        <dt>
            Employee
        </dt>

        <dd>
            @{var x = 0;}
                @foreach (var mem in Model.EmployeeID.Split(';')) {
                    x++;
                    if (x < Model.EmployeeID.Split(';').Count()) {
                        <li style="margin-left:210px">@Html.DisplayName(mem)</li>
                    }
                }
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayName("Nomor Preliminary Survey")
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.NomorPreliminarySurvey)
        </dd>

        <dt>
            @Html.DisplayName("Date Start")
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Date_Start)
        </dd>

        <dt>
            @Html.DisplayName("Date End")
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Date_End)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

<style>
.dl-horizontal dt{
    text-align: left;
    width: 210px;
}

.dl-horizontal dd{
    margin-left: 0;
}
</style>
