<div>
    <h4>Letter Of Command</h4>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">No. APM</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@ViewBag.NomerAPM" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Nomer SP</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.NomorSP" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Activity</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.Activity.Name" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Waktu Pelaksanaan</label>
            <div class="col-md-2">
                <input class="form-control input-sm" readonly value="@Model.Date_Start.ToShortDateString()" />
            </div>
            <div class="col-md-2">
                <input class="form-control input-sm" readonly value="@Model.Date_End.ToShortDateString()" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Assurance Type</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.AssuranceType" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Responsible Person</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@ViewBag.PICIDName" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Supervisor</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@ViewBag.SupervisorName" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Team Leader</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@ViewBag.TeamLeaderName" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Member</label>
            <div class="col-md-4">
                @{var m = 0;}
                @foreach (var member in ViewBag.Member.Split(';'))
                {
                    m++;
                    string mem = ViewBag.Member;
                    if (m < mem.Split(';').Count())
                    {
                        <li>@Html.Raw(member)</li>
                    }
                }
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Dasar</label>
            <div class="col-md-4">
                @{var x = 0;}
                @foreach (var dasar in ViewBag.Dasar.Split(';'))
                {
                    x++;
                    string ds = ViewBag.Dasar;
                    if (x < ds.Split(';').Count())
                    {
                        <li>@Html.Raw(dasar)</li>
                    }
                }
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Menimbang</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.Menimbang" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Untuk</label>
            <div class="col-md-4">
                @{var y = 0;}
                @foreach (var untuk in ViewBag.Untuk.Split(';'))
                {
                    y++;
                    string uk = ViewBag.Untuk;
                    if (y < uk.Split(';').Count())
                    {
                        <li>@Html.Raw(untuk)</li>
                    }
                }
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Penutup</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.Penutup" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tembusan</label>
            <div class="col-md-4">
                @{var z = 0;}
                @foreach (var tembusan in ViewBag.Tembusan.Split(';'))
                {
                    z++;
                    string ts = ViewBag.Tembusan;
                    if (z < ts.Split(';').Count())
                    {
                        <li>@Html.Raw(tembusan)</li>
                    }
                }
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Status</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.Status" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Remarks</label>
            <div class="col-md-4">
                <input class="form-control input-sm" readonly value="@Model.Remarks" />
            </div>
        </div>
    </div>
</div>
