@model ePatria.Models.LetterOfCommand

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Letter Of Command</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            No. APM
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.Raw(ViewBag.NomerAPM)
        </dd>

        <dt>
            Nomer SP
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.NomorSP)
        </dd>

        <dt>
            Activity
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Activity.Name)
        </dd>

        <dt>
            Waktu Pelaksanaan
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Date_Start) to @Html.DisplayFor(model => model.Date_End)
        </dd>

        <dt>
            Assurance Type
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.AssuranceType)
        </dd>

        <dt>
            @Html.DisplayName("Responsible Person")
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.Raw(ViewBag.PICIDName)
        </dd>

        <dt>
            @Html.DisplayName("Supervisor")
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.Raw(ViewBag.SupervisorName)
        </dd>

        <dt>
            @Html.DisplayName("Team Leader")
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.Raw(ViewBag.TeamLeaderName)
        </dd>

        <dt>
            @Html.DisplayName("Member")
        </dt>

        <dd>
            @{var m = 0;}
                @foreach (var member in ViewBag.MemberName.Split(';')) {
                    m++;
                    string mem = ViewBag.MemberName;
                    if (m < mem.Split(';').Count()) {
                    <li style="margin-left:160px">@Html.Raw(member)</li>
                    }
                }
        </dd>

        <dt>
            Dasar
        </dt>

        <dd>
            @{var x = 0;}
                @foreach (var dasar in ViewBag.Dasar.Split(';')) {
                    x++;
                    string ds = ViewBag.Dasar;
                    if (x < ds.Split(';').Count()) {
                    <li style="margin-left:160px">@Html.Raw(dasar)</li>
                    }
                }
        </dd>

        <dt>
            Menimbang
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Menimbang)
        </dd>

        <dt>
            Untuk
        </dt>

        <dd>
            @{var y = 0;}
                @foreach (var untuk in ViewBag.Untuk.Split(';')) {
                    y++;
                    string uk = ViewBag.Untuk;
                    if (y < uk.Split(';').Count()) {
                    <li style="margin-left:160px">@Html.Raw(untuk)</li>
                    }
                }
        </dd>

        <dt>
            Penutup
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Penutup)
        </dd>

        <dt>
            Tembusan
        </dt>

        <dd>
            @{var z = 0;}
                @foreach (var tembusan in ViewBag.Tembusan.Split(';')) {
                    z++;
                    string ts = ViewBag.Tembusan;
                    if (z < ts.Split(';').Count()) {
                    <li style="margin-left:160px">@Html.Raw(tembusan)</li>
                    }
                }
        </dd>


        <dt>
            Status
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Remarks
        </dt>

        <dd>
            <b>:</b>&nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
<style>
.dl-horizontal dt{
    text-align: left;
    width: 160px;
}

.dl-horizontal dd{
    margin-left: 0;
}
</style>