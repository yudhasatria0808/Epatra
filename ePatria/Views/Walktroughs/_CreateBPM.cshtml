<script>
    $("#bpmform").validate({
        errorLabelContainer: $("ul", $('div.error-container')),
        wrapper: 'li',
        rules: {
            Name: "required"
        },
        messages: {
            Name: "Please enter BPM name"
        }
    });
    $(document).ready(function () {
        $('#table-bpm').DataTable();
    });

    function setEditForm(id, name)
    {
        $('#IdBpmedit').val(id);
        $('#BPMEdit').val(name);
    }
</script>




