<script type="text/javascript">
    $(document).ready(function () {
        $('#table-rcm').DataTable();
    });
    $(function () {
        $('#bpms').autocomplete({
            source: function (request, response) {
                $.getJSON("../AutocompleteBPM", { term: request.term, WalktroughID: $('#WalktroughID').val() },
                          response);
            },
            minLength: 2, change: function (event, ui) {
                if (!ui.item) {
                    $(this).val("");
                }
            }
        });
    })
